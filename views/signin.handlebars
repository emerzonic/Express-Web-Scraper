<div class="ui container home-container sticky">
    <div class="ui four column centered grid">
        <div class="column">
            <div class="ui inverted segment">
                {{#if info}}
                    <div class="ui compact blue message">
                         <i class="close icon"></i>
                        <p>{{info}}</p>
                    </div>
                    {{/if}} {{#if error}}
                    <div class="ui compact negative message">
                         <i class="close icon"></i>
                        <p>{{error}}</p>
                    </div>
                    {{/if}}
                <form action="/signin" class="ui inverted form" method="POST">
                    <div class="required field">
                        <label>Username</label>
                        <div class="ui icon input">
                            <input name="username" placeholder="username" type="text">
                            <i class="user icon"></i>
                        </div>
                    </div>
                    <div class="required field">
                        <label>Password</label>
                        <div class="ui icon input">
                            <input type="password" name="password" placeholder="Password">
                            <i class="lock icon"></i>
                        </div>
                    </div>
                    <div class="ui hidden divider"></div>
                    <div class="ui grid">
                        <div class="center aligned column">
                            <button type="submit" class="fluid ui submit primary button">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>