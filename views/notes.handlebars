<div class="ui container home-container sticky">
    <div class="ui piled blue segment">
        <h1 class="ui header centered">Add Articles Notes</h1>
    </div>


    <div class="ui grid">
        <div class="sixteen wide mobile eight wide tablet ten wide computer centered column">
            <div class="header">Adding Article Notes to</div>
            <div class="description">
                <h3 id="articleTitle">{{article.title}}</h3>
            </div>
            <div class="scrolling centered content">
                {{#each notes}}
                 <h3 class="ui dividing header"></h3>
                <div class="ui minimal comments">
                    <div class="comment">
                        <div class="content">
                            <div class="metadata">
                                <span class="date">{{this.createdAt}}</span>
                            </div>
                            <div class="text">
                                <p>{{this.text}}</p>
                            </div>
                            <div class="actions">
                                <form action="/articles/{{../article._id}}/note/{{this._id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="ui right floated red icon button">
                                        <i class="trash alternate icon"></i>
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
                {{/each}}
                <form action="/articles/{{article._id}}" class="ui reply form" method="POST">
                    <div class="field">
                        <textarea name="text"></textarea>
                    </div>
                     <a href="/articles/saved" class="ui inverted blue labeled submit icon button">
                        <i class="undo alternate icon"></i> Back to Articles
                    </a>
                    <button type="submit" class="ui blue submit button">
                       </i> Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
